= simple_form_for(@article) do |f|
    = f.error_notification

    .form-inputs
        = f.hidden_field :user_id
        = f.input :title
        = f.input :body, input_html: { rows: 5 }
        = f.input :tag_list, label: "Tags* (separated by commas)", input_html: { value: @article.tag_list.to_s }
        = f.input :start_date
        = f.input :end_date

    .form-actions
        = f.button :submit
