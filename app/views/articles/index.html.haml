.col-md-12
    %h1 Butler Creek News
    %h3 The latest happenings around Butler Creek

    = link_to 'New Article', new_article_path if current_user && current_user.can_create?(Article)

    - @articles.each do |article|
        %header
            %h3= article.title
            %p.article-published= article.start_date.strftime("%B %-d, %Y")
        %p= simple_format(article.body)
        %p.article-expires Article will be shown until #{article.end_date.strftime("%B %-d, %Y")}

        = link_to 'Edit', edit_article_path(article) if current_user && current_user.can_update?(article)
        = link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.can_delete?(article)
