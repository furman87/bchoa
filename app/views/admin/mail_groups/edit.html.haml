.row
    %h1 Editing Mail Group - #{@mail_group.name}

.row
    .col-md-5.admin
        %h3 Residents Not In Group
        %button.btn.btn-primary.btn-sm.admin-header#add-to-mail-group Add Selected to Group
        %hr
        %table.table.residents
            %thead
                %tr
                    %th
                    %th User
            %tbody
                - @non_members.each do |user|
                    %tr
                        %td
                            =check_box_tag "add_user_ids[]", user.id
                        %td
                            =user.last_first
                            %br
                            =user.residences.first.address
                            %br
                            =user.email
    .col-md-1
    .col-md-5.admin
        %h3 Residents In Group
        %button.btn.btn-primary.btn-sm.admin-header#remove-from-mail-group Remove Selected to Group
        %hr
        %table.table.residents
            %thead
                %tr
                    %th
                    %th User
            %tbody
                - @members.each do |user|
                    %tr
                        %td
                            =check_box_tag "remove_user_ids[]", user.id
                        %td
                            =user.last_first
                            %br
                            =user.residences.first.address
                            %br
                            =user.email