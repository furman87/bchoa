.row
    .col-md-9.admin
        %h3 Mail Groups
        = link_to new_admin_mail_group_path, title: "Add", class: "btn btn-primary btn-xs admin-header" do
            %span.glyphicon.glyphicon-plus
.row
    .col-md-9
        %table.table
            %thead
                %tr
                    %th Name
                    %th
            %tbody
                - @mail_groups.each do |mail_group|
                    %tr
                        %td= mail_group.name
                        %td
                            = link_to edit_admin_mail_group_path(mail_group), title: "Edit", class: "btn btn-primary btn-xs" do
                                %span.glyphicon.glyphicon-edit
                            = link_to admin_mail_group_path(mail_group), method: :delete, title: "Delete", class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } do
                                %span.glyphicon.glyphicon-trash
