.col-md-12.admin
    %h1 User Administration

    -# %table.table.table-striped
    %table.table#residents-list
        %thead
            %tr
                %th Name
                %th Email
                %th Phone
                - if @can_update_user
                    %th Actions

        %tbody
            - @users.each do |user|
                %tr
                    %td= user.last_first
                    %td.wrap= user.email
                    %td.wrap= user.phone
                    - if @can_update_user
                        %td
                            = link_to edit_admin_user_path(user) do
                                %span.glyphicon.glyphicon-pencil{title: "Edit"}
                    - else
                        %td
