.row
    .col-md-9
        %h2 Butler Creek Board
.row
    .col-md-9
        %table.table
            %thead
                %tr
                    %th Description
                    %th Name
                    %th Email
                    %th Phone

            %tbody
                - @board_members.each do |member|
                    %tr
                        %td= member.description
                        %td= member.user.first_last if member.user
                        %td= member.email.blank? ? member.user.email : member.email if member.user
                        %td.wrap= member.user.phone if member.user
